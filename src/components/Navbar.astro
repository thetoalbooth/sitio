---
const { links } = Astro.props;
---

<nav class="navbar">
    <div class="banner">
        <div class="title">EL S√çTIO</div>
        <ul>
            {links.map(link => (
                <li>
                    <a href={link.href}>{link.text}</a>
                </li>
            ))}
        </ul>
    </div>
</nav>

<style>
.navbar {
    background-color: #C4AF9A;
    color: #333;
    padding: 20px;
    border-bottom: thick double #333;
    margin-bottom: 20px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}

.banner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

.title {
    font-family: 'Courier', serif;
    font-size: 1.8em;
    font-weight: bolder;
    letter-spacing: 15px;
}

.navbar ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 25px;
}

.navbar a {
    color: #333;
    text-decoration: none;
    font-family: 'Courier', serif;
    font-size: 1.1em;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color 1.0s ease;
}

.navbar a:hover {
    color: #3333335f;
    text-decoration: none;
}
</style>